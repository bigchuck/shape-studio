{
  "version": "1.0",
  "description": "Example demonstrating weighted random selection for operation emphasis",
  "template_libraries": [
    "templates/library.json"
  ],
  "global_params": {
    "full_canvas": "0,0,768,768",
    "center_region": "200,200,568,568"
  },
  "executables": {
    "split_offset_emphasis": {
      "description": "Dynamic polygon favoring split_offset operation (50%)",
      "randomization": {
        "operations": [
          ["split_offset", 50],
          ["sawtooth", 30],
          ["squarewave", 20]
        ],
        "bg_fill": ["#E8F4F8", "#F0E8F8", "#F8F0E8"]
      },
      "commands": [
        {
          "template": "bg_shape",
          "params": {
            "name": "bg",
            "bounds": "${full_canvas}",
            "fill": "${bg_fill}"
          }
        },
        {
          "template": "focal_shape",
          "params": {
            "name": "focal",
            "bounds": "${center_region}",
            "ops": "${operations}",
            "iters": "20"
          }
        }
      ]
    },
    
    "sawtooth_dominant": {
      "description": "Dynamic polygon heavily favoring sawtooth (70%)",
      "randomization": {
        "operations": [
          ["sawtooth", 70],
          ["split_offset", 20],
          ["squarewave", 10]
        ],
        "focal_color": [
          ["#2C3E50", 40],
          ["#E74C3C", 30],
          ["#3498DB", 20],
          ["#27AE60", 10]
        ]
      },
      "commands": [
        {
          "template": "focal_shape",
          "params": {
            "name": "shape",
            "bounds": "${center_region}",
            "ops": "${operations}",
            "color": "${focal_color}",
            "iters": "25"
          }
        }
      ]
    },
    
    "balanced_operations": {
      "description": "Equal weight to all operations (backward compatible syntax)",
      "randomization": {
        "operations": ["split_offset", "sawtooth", "squarewave"],
        "position": [
          "100,100,400,400",
          "200,200,568,568",
          "368,368,668,668"
        ]
      },
      "commands": [
        {
          "template": "focal_shape",
          "params": {
            "name": "balanced",
            "bounds": "${position}",
            "ops": "${operations}"
          }
        }
      ]
    },
    
    "complex_weights": {
      "description": "Multiple weighted parameters for complex control",
      "randomization": {
        "operations": [
          ["split_offset", 5],
          ["sawtooth", 3],
          ["squarewave", 2]
        ],
        "complexity": [15, 35],
        "fill_choice": [
          ["#3498DB", 50],
          ["#E74C3C", 30],
          ["NONE", 20]
        ],
        "alpha_level": [
          [0.8, 60],
          [0.5, 30],
          [0.3, 10]
        ]
      },
      "commands": [
        {
          "template": "textured_shape",
          "params": {
            "name": "complex",
            "bounds": "${center_region}",
            "iters": "${complexity}",
            "fill": "${fill_choice}",
            "alpha": "${alpha_level}"
          }
        }
      ]
    }
  }
}